<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".blocker">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.9" android:layout_marginLeft="20dp"
                android:text="رجوع">

            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.2">
                <ImageButton
                    android:id="@+id/road_blocker"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    android:text="بوابه دخول"
                    android:src="@drawable/barrier_1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    ></ImageButton>
                <ImageButton
                    android:id="@+id/bollared_blocker"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_margin="20dp"

                    android:src="@drawable/bollared"
                    android:padding="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"></ImageButton>
                <ImageButton
                    android:id="@+id/barrier_blocker"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"

                    android:layout_margin="20dp"
                    android:src="@drawable/road_blocker_meyer"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"></ImageButton>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.9" android:layout_marginLeft="20dp"
                android:text="التحقق من الهويات">

            </Button>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>